/**
 * Interfaces para la configuraci√≥n y estado del bot
 */

export interface BotConfig {
  environment: 'local' | 'cloud-run' | 'development';
  port: number;
  host: string;
  webhookUrl: string;
  baseUrl: string;
  isLocal: boolean;
  openaiTimeout: number;
  openaiRetries: number;
  logLevel: 'development' | 'production';
  enableDetailedLogs: boolean;
}

export interface BotMetrics {
  totalMessages: number;
  messagesPerUser: Map<string, number>;
  averageResponseTime: number;
  uptime: number;
  activeBuffers: number;
  activeTimers: number;
  totalThreads: number;
}

export interface BotStatus {
  status: 'healthy' | 'initializing' | 'error';
  timestamp: string;
  environment: string;
  port: number;
  initialized: boolean;
  version: string;
  systemHealth: {
    userBuffers: number;
    manualBuffers: number;
    activeTimers: number;
    totalThreads: number;
  };
}

export interface ThreadInfo {
  threadId: string;
  chatId: string;
  userName: string;
  lastActivity: number;
}

export interface UserActivity {
  userId: string;
  userName: string;
  lastMessage: string;
  timestamp: Date;
  messageCount: number;
  status: 'active' | 'idle' | 'processing';
} 