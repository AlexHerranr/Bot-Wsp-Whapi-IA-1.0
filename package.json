{
  "name": "tealquilamos-bot",
  "version": "1.0.0",
  "description": "Bot de WhatsApp para hotel TeAlquilamos con IA integrada",
  "type": "commonjs",
  "main": "src/app-unified.ts",
  "scripts": {
    "dev": "tsx --watch src/app-unified.ts",
    "dev:local": "concurrently -k -n BOT,NGROK -c green,cyan \"npm run dev\" \"ngrok http 3008 --domain=actual-bobcat-handy.ngrok-free.app\"",
    "dev:cloud": "cross-env NODE_ENV=production tsx --watch src/app-unified.ts",
    "dev:old": "tsx --watch src/app.ts",
    "build": "tsc --outDir dist",
    "start": "node dist/app-unified.js",
    "test": "node scripts/development/test-env.js",
    "assistant": "node scripts/assistant-management/assistant-cli.js",
    "create-assistant": "node scripts/create-new-assistant-v2.js",
    "check-docs": "node scripts/check-docs.js",
    "pre-deploy": "powershell -ExecutionPolicy Bypass -File scripts/pre-deploy.ps1",
    "deploy": "npm run build && npm run pre-deploy && git push origin master",
    "deploy:auto": "npm run build && gcloud run deploy bot-wsp-whapi-ia --source . --region northamerica-northeast1 --allow-unauthenticated",
    "health-check": "node -e \"require('http').get('http://localhost:8080/health', (res) => { console.log('Status:', res.statusCode); process.exit(res.statusCode === 200 ? 0 : 1) })\"",
    "health-check:local": "node -e \"require('http').get('http://localhost:3008/health', (res) => { console.log('Status:', res.statusCode); process.exit(res.statusCode === 200 ? 0 : 1) })\"",
    "config": "node -e \"console.log('Environment Config:'); console.log(require('./src/config/environment.js').config);\"",
    "cloud:logs": "python tools/log-tools/cloud-parser/parse_bot_logs.py --sessions 10 --hours 1"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "openai",
    "assistant",
    "hotel",
    "typescript"
  ],
  "dependencies": {
    "@google-cloud/secret-manager": "^6.1.0",
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "node-fetch": "^3.3.2",
    "openai": "^4.76.0",
    "tslib": "^2.8.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/uuid": "^9.0.8",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "rollup": "^4.27.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "author": "Alexander - TeAlquilamos",
  "license": "ISC"
}
