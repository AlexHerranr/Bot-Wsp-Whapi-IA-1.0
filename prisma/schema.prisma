// Vista unificada - Orden visual + nombres exactos de metadatos
model ClientView {
  // 🔥 PRIORIDAD VISUAL 1: IDENTIFICACIÓN BÁSICA
  phoneNumber         String   @id  // FUENTE: webhook message.from | FRECUENCIA: Cada mensaje
  name                String?  // FUENTE: WHAPI getChatInfo().name | FRECUENCIA: syncWhapiLabels()
  userName            String?  // FUENTE: webhook message.from_name | FRECUENCIA: Cada mensaje
  
  // 🔥 PRIORIDAD VISUAL 2: ETIQUETAS
  label1              String?  // FUENTE: WHAPI getChatInfo().labels[0].name | FRECUENCIA: syncWhapiLabels()
  label2              String?  // FUENTE: WHAPI getChatInfo().labels[1].name | FRECUENCIA: syncWhapiLabels()
  label3              String?  // FUENTE: WHAPI getChatInfo().labels[2].name | FRECUENCIA: syncWhapiLabels()
  
  // 🔥 PRIORIDAD VISUAL 3: CONTACTO
  chatId              String?  // FUENTE: webhook message.chat_id | FRECUENCIA: Cada mensaje
  
  // 🔥 PRIORIDAD VISUAL 4: ACTIVIDAD RECIENTE
  lastActivity        DateTime @updatedAt // FUENTE: @updatedAt automático Prisma | FRECUENCIA: Cada cambio
  
  // 🔥 PRIORIDAD VISUAL 5: THREAD TÉCNICO
  threadId            String?  // FUENTE: OpenAI al crear thread | FRECUENCIA: Al crear/cambiar thread
  
  // 🔥 PRIORIDAD VISUAL 6: CRM - AUTOMATIZADO (AL FINAL)
  profileStatus       String?   @db.Text  // Resumen del cliente (máx 300 chars) - OpenAI Assistant
  proximaAccion       String?             // Acción sugerida - OpenAI Assistant
  fechaProximaAccion  DateTime?           // Fecha de la acción (YYYY-MM-DD) - OpenAI Assistant
  prioridad           Int?      @default(2)  // 1=Alta, 2=Media, 3=Baja - OpenAI Assistant
}