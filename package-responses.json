{
  "name": "tealquilamos-bot-responses",
  "version": "2.0.0",
  "description": "TeAlquilamos Bot - Versi√≥n con Responses API",
  "main": "dist/main-responses.js",
  "scripts": {
    "dev": "tsx watch src/main-responses.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/main-responses.js",
    "start:prod": "node dist/main-responses.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "db:migrate": "psql $DATABASE_URL -f prisma/migrations/add_responses_api_tables.sql",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "clean": "rimraf dist node_modules/.cache",
    "prepare": "husky install"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1",
    "axios": "^1.6.5",
    "date-fns": "^3.2.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.24.7",
    "pdf-lib": "^1.17.1",
    "reflect-metadata": "^0.2.1",
    "tsyringe": "^4.8.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.7",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prisma": "^5.8.1",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}